<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
</head>
<body>
    <div id="header">
        <h1>ASP.NET MVC MUSIC STORE</h1>
        <ul id="navlist">
            <li class="first"><a href="/"
                id="current">Home</a></li>
            <li><a
                href="/Store/">Store</a>
            </li>
            <li>@{Html.RenderAction("CartSummary", "ShoppingCart");}</li>
            <li><a
                href="/StoreManager/">Manager</a></li>
        </ul>
    </div>
    @using (Html.BeginForm("Search", "Home", FormMethod.Get))
    {
        <div style="float: right">
            <div class="editor-field">
                @Html.TextBox("SearchValue") &nbsp;<input type="submit" value="Search" />
            </div>

        </div>
    }
    <div style="float: left">
        @{Html.RenderAction("GenreMenu", "Store");}
    </div>
    <div id="main" style="width: 90%">
        @RenderBody()
    </div>

    <div id="footer">
        built with <a href="http://asp.net/mvc">ASP.NET MVC 3</a>
    </div>

</body>
</html>
